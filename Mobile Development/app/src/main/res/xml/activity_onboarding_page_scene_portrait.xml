<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    
    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start">
       <KeyFrameSet>

       </KeyFrameSet>
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/image_menu_page1"
            android:layout_width="0dp"
            android:layout_height="250dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.2" />
        <Constraint
            android:id="@+id/menu1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toStartOf="@id/menu2"
            motion:layout_constraintBottom_toBottomOf="@id/menu2"
            motion:layout_constraintTop_toTopOf="@id/menu2" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="30dp"
            motion:layout_constraintEnd_toEndOf="@id/guideline_vertical"
            motion:layout_constraintTop_toBottomOf="@id/desc_menu_page1"
            motion:layout_constraintStart_toStartOf="@id/guideline_vertical">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintBottom_toBottomOf="@id/menu2"
            motion:layout_constraintStart_toEndOf="@id/menu2"
            motion:layout_constraintTop_toTopOf="@id/menu2" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/image_menu_page1"
            android:layout_width="0dp"
            android:layout_height="250dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.2" />
        <Constraint
            android:id="@+id/image_menu_page2"
            android:layout_width="0dp"
            android:layout_height="250dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2" />
        <Constraint
            android:id="@+id/menu1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toStartOf="@id/menu2"
            motion:layout_constraintTop_toTopOf="@id/menu2"
            motion:layout_constraintBottom_toBottomOf="@id/menu2">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="30dp"
            motion:layout_constraintTop_toBottomOf="@id/desc_menu_page1"
            motion:layout_constraintStart_toStartOf="@id/guideline_vertical"
            motion:layout_constraintEnd_toEndOf="@id/guideline_vertical">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@id/menu2"
            motion:layout_constraintStart_toEndOf="@id/menu2"
            motion:layout_constraintBottom_toBottomOf="@id/menu2">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/menu3"
        motion:deriveConstraintsFrom="@+id/end" >
        <Constraint
            android:id="@+id/skip_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/image_menu_page2"
            android:layout_width="0dp"
            android:layout_height="250dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2" />
        <Constraint
            android:id="@+id/image_menu_page3"
            android:layout_width="0dp"
            android:layout_height="250dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.2" />
        <Constraint
            android:id="@+id/menu2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="30dp"
            motion:layout_constraintTop_toBottomOf="@id/desc_menu_page1"
            motion:layout_constraintStart_toStartOf="@id/guideline_vertical"
            motion:layout_constraintEnd_toEndOf="@id/guideline_vertical">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@id/menu2"
            motion:layout_constraintStart_toEndOf="@id/menu2"
            motion:layout_constraintBottom_toBottomOf="@id/menu2">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/btn_signup_onboarding_page"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintEnd_toEndOf="@id/guideline_vertical"
            motion:layout_constraintTop_toTopOf="@id/guideline_horizontal"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/btn_login_onboarding_page"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintTop_toTopOf="@id/guideline_horizontal"
            motion:layout_constraintStart_toStartOf="@id/guideline_vertical"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintGuide_percent="0.5"/>
        <Constraint
            android:id="@+id/guideline_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintGuide_percent="0.80"/>
        <Constraint
            android:id="@+id/title_menu_page2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            motion:layout_constraintEnd_toEndOf="@id/image_menu_page2"
            motion:layout_constraintTop_toBottomOf="@id/image_menu_page2"
            motion:layout_constraintStart_toStartOf="@id/image_menu_page2" />
        <Constraint
            android:id="@+id/desc_menu_page2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            motion:layout_constraintTop_toBottomOf="@id/title_menu_page2"
            motion:layout_constraintStart_toStartOf="@id/title_menu_page2"
            motion:layout_constraintEnd_toEndOf="@id/title_menu_page2"/>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/menu3">
        <OnSwipe motion:dragDirection="dragLeft" />
        <OnClick motion:targetId="@+id/skip_menu" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/menu3">
        <OnClick motion:targetId="@+id/skip_menu" />
        <KeyFrameSet>
            <KeyPosition
                motion:motionTarget="@id/image_menu_page2"
                motion:framePosition="0" />
            <KeyPosition
                motion:motionTarget="@id/title_menu_page2"
                motion:framePosition="0" />
            <KeyPosition
                motion:motionTarget="@id/desc_menu_page2"
                motion:framePosition="0" />
        </KeyFrameSet>
    </Transition>
</MotionScene>