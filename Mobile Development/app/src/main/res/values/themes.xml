<resources>
    <!-- Base application theme. -->
    <style name="Theme.Fasrecon_primary" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="Theme.Fasrecon_tertiary" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="Theme.Fasrecon_secondary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#4FACFE</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="button_login_onboarding_page" parent="ThemeOverlay.Material3.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="cloth_list" parent="ThemeOverlay.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:radius">24dp</item>
    </style>

    <style name="button_signup_onboarding_page" parent="ThemeOverlay.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="button_login_loginpage" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="header_login">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normal_tv_loginpage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_common_loginpage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_label_loginpage" parent="tv_common_loginpage">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_forgot_loginpage" parent="tv_common_loginpage">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="bold_tv_nav">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">56dp</item>
        <item name="android:height">32dp</item>
        <item name="marginHorizontal">4dp</item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/menu_container</item>
    </style>

    <style name="custom_bottom_nav">
        <item name="android:background">@drawable/custom_bottom_navigation</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="itemIconPadding">0dp</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemTextColor">@color/custom_active_menu</item>
        <item name="itemIconTint">@color/custom_active_menu</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    </style>

    <!-- Home Fragment -->
    <style name="title_homepage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="info_outfit_user">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="label_service">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="nav_myoutfit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="card_service">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="elevation">8dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="image_service">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="label_service_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>